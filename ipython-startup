#!/usr/bin/env python
# coding: utf-8

import os
import logging
logging.basicConfig(level=logging.DEBUG)
log = logging.getLogger('ipy')

from glob import glob
from sudoku import solve

def reload_puzzles():
    global P, A
    from sudoku import get_puzzles
    P = list(get_puzzles())
    A = dict()

    for file in glob('t/asset/p*.txt'):
        bname = os.path.basename(file)[:-4]
        puzzles = tuple(get_puzzles(file))
        if len(puzzles) == 1:
            puzzles, = puzzles
        A[bname] = puzzles

reload_puzzles()
fp = P[0]
fq = solve(fp)

lp = P[-1]
lq = solve(lp)

p_45 = A['p_45']
p_bp = A['p_bp']

p9 = P[9]
q9 = solve(p9)
q9.check()

p7 = P[7]
q7 = solve(p7)
q7.check()

p5 = P[5]
q5 = solve(p5)
q5.check()
